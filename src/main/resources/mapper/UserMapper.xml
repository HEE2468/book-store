<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sww.bank_book.login.dao.UserDao">

    <!--登录-->
    <select id="findPassword" resultType="com.sww.bank_book.login.entity.User">
        SELECT * FROM User WHERE username = #{username}
    </select>

    <!--注册-->
    <insert id="insertUser" parameterType="com.sww.bank_book.login.entity.User">
        INSERT INTO user(
        <trim suffixOverrides=",">
            id,
            username,
            password,
            register_date
        </trim>
        )
        VALUES (
        <trim suffixOverrides=",">
            #{id},
            #{username},
            #{password},
            #{registerDate}
        </trim>
        )
    </insert>

    <!--用户名验重-->
    <select id="checkUserName" resultType="java.lang.Integer">
        SELECT count(*) FROM User WHERE username = #{username}
    </select>




</mapper>